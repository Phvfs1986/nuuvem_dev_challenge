<div class="min-h-full px-4 sm:px-6 lg:px-8">
  <div class="flex justify-center">
    <div class="w-full max-w-4xl pb-8">
      <div class="flex justify-between items-center">
        <h1 class="text-4xl font-semibold mb-4 text-center">Import Details</h1>
        <%= link_to "<- Back", transaction_imports_path, class: "text-xl font-semibold" %>
      </div>
    </div>
  </div>
  <div class="flex justify-center">
    <div class="w-full max-w-4xl">
      <div class="bg-white shadow-md rounded-lg p-4 mb-4">
        <div class="flex justify-between items-center">
          <div class="text-lg font-bold mr-4">Date</div>
          <div><%= @transaction_import.uploaded_at %></div>
        </div>
      </div>
      <div class="bg-white shadow-md rounded-lg p-4 mb-4">
        <div class="flex justify-between items-center">
          <div class="text-lg font-bold mr-4">File Total Income</div>
          <div><%= @transaction_import.file_total_income %></div>
        </div>
      </div>
      <div class="bg-white shadow-md rounded-lg p-4 mb-4">
        <div class="flex justify-between items-center">
          <div class="text-lg font-bold mr-4">Download Imported File</div>
          <div><%= @transaction_import.download_link %></div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="min-h-full flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="relative overflow-x-auto bg-white shadow-md rounded-lg p-4 mb-4 w-full max-w-4xl">
    <div class="overflow-x-auto mt-4">
      <%= render partial: "layouts/elements/table",
          locals: {
            collection: @transactions,
            decorator: TransactionDecorator
          }
        %>
    </div>
  </div>
</div>
<div class="flex mt-12 items-center justify-center space-x-4 w-full">
  <%== pagy_nav(@pagy) %>
</div>
<div class="flex items-center justify-center space-x-4 w-full">
  <p class="text-center mt-8 text-gray-500"><%== pagy_info @pagy %></p>
</div>
